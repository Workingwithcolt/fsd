<%layout('/layout/boilerplate.ejs')%>
    <h1 class="text-center">Edit Post</h1>
    <div class="col-6 offset-3">
        <form action="/post/<%=post._id%>?_method=patch" method="post" >
            <div class="mb-3">
            <label class="form-label" for="title">Title</label>
            <input type="text"class ="form-control" id ="title" value="<%=post.post_title%>" name="title">
        </div>
        <div class="mb-3">
            <label class="form-label" for="description">Description</label>
            <textarea class="form-control"type="text" id ="description"  name="description"><%=post.post_info%></textarea>
        </div>
        <div class="mb-3">
            <button class="btn btn-success" type="submit">Update Post</button>
        </div>
        </form>
        <div class="btn btn-success">
            <a style="text-decoration: none;"  href="/post" >Back To Post</a>
        </div>
        
    </div>